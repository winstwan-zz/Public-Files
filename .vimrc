syntax on
filetype on

set nocompatible
set history=1000
set background=light

set showmode
set showcmd

set magic
set number
set laststatus=2
set cindent
set backspace=2
set paste

set noerrorbells
set showmatch
set matchtime=3
set wildmenu
set ruler

set ignorecase
set smartcase
set incsearch
set wildchar=<TAB>

filetype indent on
set autoindent
set expandtab
set tabstop=4
set shiftwidth=4

autocmd VimEnter * set vb t_vb=
